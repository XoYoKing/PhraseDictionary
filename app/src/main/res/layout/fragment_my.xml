<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_top_picture"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/horse"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />

    <View android:layout_height="2dp"
          android:layout_width="match_parent"
          android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日学习数量："
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/margin_16">

        <RadioGroup
            android:id="@+id/rg_my_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_my_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5个"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/rb_my_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10个"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/rb_my_fifteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15个"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/rb_my_twenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20个"
                android:textSize="18sp"/>
        </RadioGroup>
    </LinearLayout>

    <View android:layout_height="2dp"
          android:layout_width="match_parent"
          android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学习词库:"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/margin_16">

        <RadioGroup
            android:id="@+id/rg_my_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_my_base_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本词库(800个高考常用成语）"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/rb_my_custom_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义词库（日积月累）"
                android:textSize="18sp"/>
        </RadioGroup>
    </LinearLayout>

    <View android:layout_height="2dp"
          android:layout_width="match_parent"
          android:background="#ffffff"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/margin_16">

        <RadioGroup
            android:id="@+id/rg_my_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_my_restart_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="18sp"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/rb_my_restart_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标记"
                android:textSize="18sp"/>
        </RadioGroup>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        >

        <Button
            android:id="@+id/btn_my_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="重新学习:"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"/>

    </RelativeLayout>
    <View android:layout_height="2dp"
          android:layout_width="match_parent"
          android:background="#ffffff"/>

</LinearLayout>